# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Shared Authentication
VITE_SHARED_EMAIL=site@mydomain.com

# Local Development Bypass (set to 'true' to bypass login screen locally)
VITE_LOCAL_BYPASS_AUTH=false
VITE_ADMIN_EMAIL=admin@example.com

# Production Mode Simulation (set to 'true' to simulate production caching locally)
VITE_FORCE_PRODUCTION_MODE=false

# MLB Team Configuration
# Default: 136 (Seattle Mariners)
# Other popular teams:
# 147: New York Yankees
# 119: Los Angeles Dodgers
# 121: New York Mets
# 111: Boston Red Sox
# Find all team IDs at: https://statsapi.mlb.com/api/v1/teams
VITE_TEAM_ID=136
